        <activity android:name=".User_choice" />
        <activity android:name=".Greetings" />
        <activity android:name=".Personal_Details" />

        <activity android:name=".mute_log" />
        <activity android:name=".Blind_log" />
        <activity android:name=".Mute_reg" />
        <activity android:name=".Blind_reg" />
        <activity android:name=".Blind_Page">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".LockService">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.SCREEN_ON" />
            </intent-filter>
        </service>
    </application>

</manifest>